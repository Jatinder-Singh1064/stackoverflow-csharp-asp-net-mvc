@model IEnumerable<N01419541_JatinderSingh_Assignment2_3.Models.Question>

@{
    ViewBag.Title = "Stackoverflow";
}

<div class="jumbotron">
    <h2>Learn, Share, Build!</h2>
    <h4>Each month, over 50 million developers come to Stack Overflow to learn, share their knowledge and build their careers.</h4>
    <h5>Join the world's largest developer community.</h5>
    <br />
    <p>
        Want to ask and search detail of a question? You have to login first!!
    </p>
</div>

<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Views)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionDateAndTime)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Views)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.ActionLink(item.QuestionName, "Details", "Questions", new { id = item.QuestionId }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionDateAndTime)
                </td>
            </tr>
        }
    </table>
</div>